# Bird (formerly MessageBird) WhatsApp API Configuration
# Get these values from: https://app.bird.com/workspaces

# Required: Access key from Settings > Security > Access Keys
# Needs "Application Developer" role
BIRD_ACCESS_KEY=your_access_key_here

# Required: Workspace ID (visible in URL when logged in)
BIRD_WORKSPACE_ID=your_workspace_id_here

# Required: WhatsApp Channel ID (from Channels page)
BIRD_CHANNEL_ID=your_channel_id_here

# Optional: Signing key for webhook verification
BIRD_SIGNING_KEY=your_signing_key_here

# Optional: Pre-approved WhatsApp Templates
# Templates need to be created and approved in Bird dashboard
# These are used for initiating conversations (required by Meta)

# Verification code template
BIRD_TEMPLATE_VERIFICATION_ID=
BIRD_TEMPLATE_VERIFICATION_VERSION=1

# Visa ready notification template
BIRD_TEMPLATE_VISA_READY_ID=
BIRD_TEMPLATE_VISA_READY_VERSION=1

# Order confirmation template
BIRD_TEMPLATE_ORDER_CONFIRMATION_ID=
BIRD_TEMPLATE_ORDER_CONFIRMATION_VERSION=1

# Status update template
BIRD_TEMPLATE_STATUS_UPDATE_ID=
BIRD_TEMPLATE_STATUS_UPDATE_VERSION=1
